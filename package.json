{
  "name": "starter-react",
  "version": "1.0.0",
  "description": "Starter React v2023",
  "scripts": {
    "build": "run-p build:app build:storybook",
    "build:app": "webpack --config webpack.config.prod.ts",
    "build:dev": "webpack --config webpack.config.dev.ts",
    "build:storybook": "storybook build --output-dir ./dist/storybook",
    "dev": "webpack serve --config webpack.config.dev.ts --hot --mode development",
    "lint": "run-s lint:*",
    "lint:style": "stylelint .",
    "lint:typescript": "eslint .",
    "prepack": "run-s build",
    "semantic-release": "semantic-release",
    "storybook": "storybook dev -p 6006",
    "test": "jest",
    "test:update-snapshots": "jest --updateSnapshot"
  },
  "author": "Abraham Tewa <1986767-abraham.tewa@users.noreply.gitlab.com>",
  "license": "MIT",
  "homepage": "https://gitlab.com/abraham.tewa/starter-react",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:abraham.tewa/starter-react.git"
  },
  "workspaces": [
    "app",
    "components",
    "packages/*"
  ],
  "devDependencies": {
    "@abrahamtewa/eslint-config": "^2.1.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
